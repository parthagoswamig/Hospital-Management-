  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  recordDate      DateTime     @default(now())
  doctorId        String?      // User ID of the doctor who created this record
  
  @@index([patientId])
  @@index([recordDate])
  @@index([recordType])
  @@index([doctorId])
