model MedicalRecord {
  id              String       @id @default(cuid())
  patientId       String
  patient         Patient      @relation(fields: [patientId], references: [id])
  recordType      String       // e.g., "DIAGNOSIS", "TREATMENT", "PRESCRIPTION", "NOTE"
